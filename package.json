{
  "scripts": {
    "build": "web-ext build",
    "builddev": "nodemon --exec 'web-ext build --overwrite-dest'",
    "lint": "web-ext lint",
    "start": "web-ext run --start-url https://twitter.com",
    "chrome": "web-ext run --target chromium --start-url https://twitter.com"
  },
  "webExt": {
    "ignoreFiles": [
      "icons/chrome-web-store-icon.png",
      "icons/icon-600.png",
      "jsconfig.json",
      "package.json",
      "README.md",
      "screenshots/"
    ]
  },
  "devDependencies": {
    "@types/chrome": "0.0.114",
    "nodemon": "^2.0.7",
    "web-ext": "^4.3.0"
  }
}
